{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": [
      "node",
      "express",
      "ws"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}