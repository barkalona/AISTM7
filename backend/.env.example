# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/aistm7

# Encryption (Generate using utils/encryption.js generateEncryptionKeys())
ENCRYPTION_KEY=your_32_byte_encryption_key_in_hex
ENCRYPTION_IV=your_12_byte_iv_in_hex

# IBKR API Configuration
IBKR_API_ENDPOINT=https://localhost:5000/v1/api
IBKR_CLIENT_PORTAL_PORT=5000

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PROGRAM_KEYPAIR=/path/to/program-keypair.json
AISTM7_TOKEN_ADDRESS=your_token_program_address
SOLANA_MINT_AUTHORITY_KEYPAIR=/path/to/mint-authority-keypair.json

# Pyth Price Feed
PYTH_PRICE_FEED=your_pyth_price_feed_pubkey
PYTH_UPDATE_INTERVAL=60000 # Price update interval in milliseconds

# Token Requirements
TOKEN_MIN_REQUIREMENT=100
TOKEN_MAX_REQUIREMENT=10000
TOKEN_TARGET_USD_VALUE=15000000 # $15 in millionths of USD

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=debug

# Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Blockchain Network
NETWORK=mainnet-beta # or devnet for testing
RPC_TIMEOUT=30000
MAX_RETRIES=3
COMMITMENT_LEVEL=confirmed

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_TIMEOUT=5000

# Performance Monitoring
METRICS_ENABLED=true
METRICS_INTERVAL=60000
PERFORMANCE_LOG_LEVEL=info

# Security
MAX_FAILED_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15m
PASSWORD_HASH_ROUNDS=12
SESSION_TIMEOUT=24h

# Feature Flags
ENABLE_TOKEN_TRADING=false
ENABLE_AUTOMATIC_REQUIREMENT_UPDATES=true
ENABLE_PRICE_ALERTS=true
ENABLE_EMAIL_NOTIFICATIONS=true